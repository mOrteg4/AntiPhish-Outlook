{
  "manifest_version": 3,
  "name": "Anti-Phishing Shield",
  "version": "1.0",
  "description": "A proactive anti-phishing tool that analyzes links on the fly.",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "dashboard.html",
    "default_icon": {
      "16": "assets/icon-16.png",
      "48": "assets/icon-32.png",
      "128": "assets/icon-128.png"
    }
  },
  "icons": {
    "16": "assets/icon-16.png",
    "48": "assets/icon-32.png",
    "128": "assets/icon-128.png"
  }
}
